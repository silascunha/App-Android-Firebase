<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Crie sua conta grátis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="18sp" android:textAlignment="center"
            android:textStyle="bold" android:textColor="@color/colorTextTint"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Junte-se a mais de meio milhão\nde pessoas e comece já"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textAlignment="center"
            android:textColor="@color/colorTextTint" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginBottom="24dp"/>
    <Button
            android:text="Cadastre-se"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorButtonText" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/textView5" android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:onClick="onBtCadastrarClick"/>
    <TextView
            android:text="Já tenho conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textColor="@color/colorTextTint" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button"
            android:onClick="onBtEntrarClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>